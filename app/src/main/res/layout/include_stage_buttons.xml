<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/md_theme_surface"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Демо: переключение статусов"
        android:textColor="@color/black"
        android:alpha="0.6"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <GridLayout
        android:columnCount="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_stage_preparation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Подготовка"
            android:textColor="@color/md_theme_onPrimary"
            app:backgroundTint="@color/md_theme_primary"
            app:cornerRadius="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_stage_construction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Стройка"
            android:textColor="@color/black"
            app:backgroundTint="@color/md_theme_secondary"
            app:cornerRadius="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_stage_acceptance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Приемка"
            android:textColor="@color/md_theme_onPrimary"
            app:backgroundTint="@color/blue"
            app:cornerRadius="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_stage_warranty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Гарантия"
            android:textColor="@color/md_theme_primary"
            app:backgroundTint="@color/md_theme_surface"
            app:strokeColor="@color/md_theme_primary"
            app:strokeWidth="1dp"
            app:cornerRadius="12dp"/>
    </GridLayout>
</LinearLayout>
