<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Верхняя панель с кнопкой назад -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Детали проекта"
        app:titleTextColor="@android:color/black" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Фото проекта -->
            <ImageView
                android:id="@+id/projectImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/project_image" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/projectTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/projectPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_600"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/projectDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_700"
                    android:layout_marginBottom="16dp"/>

                <!-- Характеристики -->
                <LinearLayout
                    android:id="@+id/characteristicsContainer"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_50"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/gray_50"
                    android:clipToOutline="true"
                    android:layout_marginTop="8dp">
                    <!-- Здесь будем динамически добавлять TextView для характеристик -->
                </LinearLayout>

                <!-- Особенности -->
                <LinearLayout
                    android:id="@+id/featuresContainer"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">
                    <!-- Динамически список особенностей с буллитами -->
                </LinearLayout>

                <!-- Что входит в стоимость -->
                <LinearLayout
                    android:id="@+id/includedContainer"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue_50"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"
                    android:clipToOutline="true">
                    <!-- Динамически список -->
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Нижняя панель кнопок -->
    <LinearLayout
        android:id="@+id/bottomActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/orderProjectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заказать проект"
            android:backgroundTint="@color/blue_600"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/contactManagerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Написать менеджеру"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/gray_700"
            android:strokeWidth="1dp"
            android:strokeColor="@color/gray_300"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
