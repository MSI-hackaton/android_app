<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Карточка 1: Документы готовы к подписанию -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#E3F2FD"
        app:strokeColor="@color/preparation_border_blue"
        app:strokeWidth="1dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Заголовок с иконкой -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_document"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/document_blue" />

                <TextView
                    android:text="Документы готовы к подписанию"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/preparation_heading_blue"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Описание -->
            <TextView
                android:text="Договор подряда, смета и график работ требуют вашего внимания"
                android:textSize="15sp"
                android:layout_marginStart="32sp"
                android:textColor="@color/preparation_text_blue"
                android:alpha="0.7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <!-- Кнопка-ссылка -->
            <TextView
                android:text="Перейти к документам →"
                android:layout_marginStart="32sp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/document_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Карточка 2: Быстрые действия -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/md_theme_surface"
        app:strokeColor="@color/preparation_border_gray"
        app:strokeWidth="1dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Быстрые действия"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <!-- Две кнопки в ряд -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <!-- Кнопка "Документы" -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/preparation_border_gray"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_document"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/document_blue" />

                        <TextView
                            android:text="Документы"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Кнопка "Чат" -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/preparation_border_gray"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_chat"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/purple" />

                        <TextView
                            android:text="Чат"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Карточка 3: Информация о проекте -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/md_theme_surface"
        app:strokeColor="@color/preparation_border_gray"
        app:strokeWidth="1dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Информация о проекте"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <!-- Строка: Проект -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:text="Проект:"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:alpha="0.6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_info_project_name"
                    android:text="Название прооекта"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:gravity="end"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Строка: Площадь -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:text="Площадь:"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:alpha="0.6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_info_project_area"
                    android:text="метраж"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:gravity="end"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Строка: Дата начала -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Дата начала:"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:alpha="0.6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_info_start_date"
                    android:text="дата начала"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:gravity="end"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
