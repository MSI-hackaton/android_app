<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Фото проекта (первое фото) -->
            <ImageView
                android:id="@+id/projectImage"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Проект «Современный»"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Цена проекта -->
            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="от 8 500 000 ₽"
                android:textColor="@color/md_theme_primary"
                android:textSize="16sp"
                android:layout_marginBottom="6dp"/>

            <!-- Краткое описание -->
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Современный двухэтажный дом с панорамными окнами и террасой"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>

            <!-- Характеристики -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/md_theme_surface"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:clipToOutline="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Характеристики"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/black"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Общая площадь"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginBottom="2dp"/>
                        <TextView
                            android:id="@+id/area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="180 м²"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Этажность"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginBottom="2dp"/>
                        <TextView
                            android:id="@+id/floors"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 этажа"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Спальни"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginBottom="2dp"/>
                        <TextView
                            android:id="@+id/bedrooms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 шт"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Срок строительства"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginBottom="2dp"/>
                        <TextView
                            android:id="@+id/constructionTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6-8 месяцев"
                            android:textSize="14sp"/>
                    </LinearLayout>

                </GridLayout>

            </LinearLayout>

            <!-- Особенности проекта -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Особенности проекта"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="?android:dividerHorizontal"
                    android:showDividers="middle">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Панорамные окна"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Терраса"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Гараж на 2 авто"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Котельная"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="2dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Что входит в стоимость -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/md_theme_secondary"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:clipToOutline="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Что входит в стоимость"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/md_theme_onPrimary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Разработка проектной документации"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_onPrimary"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Строительные материалы"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_onPrimary"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Работы под ключ"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_onPrimary"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Гарантия 5 лет"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_onPrimary"
                    android:layout_marginBottom="2dp"/>
            </LinearLayout>

            <!-- Прогресс бар -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/bottomActions"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_surface"
        android:padding="16dp"
        android:elevation="8dp">

        <!-- Primary action -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/orderButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заказать проект"
            android:textColor="@color/md_theme_onPrimary"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            app:backgroundTint="@color/md_theme_primary"
            app:cornerRadius="16dp"
            android:minHeight="56dp"/>

        <!-- Secondary action -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/messageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Написать менеджеру"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:backgroundTint="@color/md_theme_surface"
            app:strokeColor="@color/md_theme_primary"
            app:strokeWidth="1dp"
            app:cornerRadius="16dp"
            android:minHeight="56dp"
            app:icon="@android:drawable/ic_dialog_email"
            app:iconGravity="textStart"
            app:iconPadding="8dp"/>
    </LinearLayout>
</LinearLayout>
