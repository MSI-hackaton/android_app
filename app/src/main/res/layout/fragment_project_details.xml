<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Фото проекта (первое фото) -->
        <ImageView
            android:id="@+id/projectImage"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Проект «Современный»"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Цена проекта -->
        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="от 8 500 000 ₽"
            android:textColor="@color/md_theme_primary"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"/>

        <!-- Краткое описание -->
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Современный двухэтажный дом с панорамными окнами и террасой"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"/>

        <!-- Характеристики -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/md_theme_surface"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:clipToOutline="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Характеристики"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Общая площадь"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginBottom="2dp"/>
                    <TextView
                        android:id="@+id/area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="180 м²"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Этажность"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginBottom="2dp"/>
                    <TextView
                        android:id="@+id/floors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 этажа"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Спальни"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginBottom="2dp"/>
                    <TextView
                        android:id="@+id/bedrooms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 шт"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Срок строительства"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginBottom="2dp"/>
                    <TextView
                        android:id="@+id/constructionTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6-8 месяцев"
                        android:textSize="14sp"/>
                </LinearLayout>

            </GridLayout>

        </LinearLayout>

        <!-- Особенности проекта -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Особенности проекта"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="?android:dividerHorizontal"
                android:showDividers="middle">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Панорамные окна"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Терраса"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Гараж на 2 авто"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Котельная"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Что входит в стоимость -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/md_theme_secondary"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:clipToOutline="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Что входит в стоимость"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/md_theme_onPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Разработка проектной документации"
                android:textSize="14sp"
                android:textColor="@color/md_theme_onPrimary"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Строительные материалы"
                android:textSize="14sp"
                android:textColor="@color/md_theme_onPrimary"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Работы под ключ"
                android:textSize="14sp"
                android:textColor="@color/md_theme_onPrimary"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Гарантия 5 лет"
                android:textSize="14sp"
                android:textColor="@color/md_theme_onPrimary"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>

        <!-- Прогресс бар -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>
